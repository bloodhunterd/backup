{
  "@type": "object",
  "@properties": {
    "debug": {
      "@type": "string",
      "@allowed": "yes|no"
    },
    "mode": {
      "@type": "string",
      "@required": true,
      "@allowed": "agent|manager"
    },
    "timezone": {
      "@type": "string",
      "@required": true,
      "@allowed": "Europe/Berlin"
    },
    "language": {
      "@type": "string",
      "@required": true
    },
    "report": {
      "@type": "object",
      "@required": true,
      "@properties": {
        "sender": {
          "@type": "object",
          "@required": true,
          "@properties": {
            "address": {
              "@type": "string",
              "@required": true
            },
            "name": {
              "@type": "string"
            }
          }
        },
        "subject": {
          "@type": "string",
          "@required": true
        },
        "recipients": {
          "@type": "array",
          "@required": true,
          "@property": {
            "@type": "object",
            "@required": true,
            "@properties": {
              "address": {
                "@type": "string",
                "@required": true
              },
              "name": {
                "@type": "string"
              },
              "type": {
                "@type": "string",
                "@allowed": "to|cc|bcc"
              }
            }
          }
        },
        "disabled": {
          "@type": "string",
          "@allowed": "yes|no"
        }
      }
    },
    "sources": {
      "@type": "object",
      "@required": true,
      "@properties": {
        "servers": {
          "@type": "array",
          "@property": {
            "@type": "object",
            "@required": true,
            "@properties": {
              "name": {
                "@type": "string",
                "@required": true
              },
              "host": {
                "@type": "string",
                "@required": true
              },
              "ssh": {
                "@type": "object",
                "@properties": {
                  "port": {
                    "@type": "integer"
                  },
                  "user": {
                    "@type": "string"
                  },
                  "key": {
                    "@type": "string",
                    "@required": "string"
                  },
                  "passphrase": {
                    "@type": "string"
                  }
                }
              },
              "source": {
                "@type": "string",
                "@required": true
              },
              "target": {
                "@type": "string"
              },
              "disabled": {
                "@type": "string",
                "@allowed": "yes|no"
              }
            }
          }
        },
        "directories": {
          "@type": "array",
          "@property": {
            "@type": "object",
            "@required": true,
            "@properties": {
              "name": {
                "@type": "string",
                "@required": true
              },
              "source": {
                "@type": "string",
                "@required": true
              },
              "target": {
                "@type": "string"
              },
              "disabled": {
                "@type": "string",
                "@allowed": "yes|no"
              }
            }
          }
        },
        "databases": {
          "@type": "array",
          "@property": {
            "@type": "object",
            "@required": true,
            "@properties": {
              "name": {
                "@type": "string",
                "@required": true
              },
              "source": {
                "@type": "object",
                "@required": true,
                "properties": {
                  "type": {
                    "@type": "string",
                    "@allowed": "host|docker"
                  },
                  "host": {
                    "@type": "string"
                  },
                  "user": {
                    "@type": "string"
                  },
                  "password": {
                    "@type": "string"
                  },
                  "container": {
                    "@type": "string"
                  }
                }
              },
              "target": {
                "@type": "string"
              },
              "disabled": {
                "@type": "string",
                "@allowed": "yes|no"
              }
            }
          }
        }
      }
    },
    "target": {
      "@type": "object",
      "@properties": {
        "directory": {
          "@type": "string",
          "@required": true
        }
      }
    }
  }
}
